<h3>
  {{#if this.editName}}
    {{input value=this.model.name type="text"}}
    <small>
      <button {{action this.save}}>Save</button>
    </small>
  {{else}}
    {{this.model.name}}
    {{#if (not-eq this.model.id "demo")}}
      <small>
        <button {{action (toggle "editName" this)}}>Edit</button>
        <button {{action this.delete}} class="warning">Delete</button>
      </small>
    {{/if}}
  {{/if}}
</h3>
<h4>{{this.model.streak}} day streak</h4>
<h4>{{this.model.records.length}} days recorded</h4>

<GoalUpdater
  @goal={{this.model}}
  @submit={{action this.goals.saveRecord this.model}}
/>
<GoalCalendar
  @data={{this.dataHash}}
  @type={{this.model.type}}
  @colorScheme={{this.settings.visualizationColorScheme}}
/>