<form onsubmit={{action this.submit}}>
  <label for="name">
    Name
    <input type="text" placeholder="What are you tracking?" name="name">
  </label>

  <label for="type">
    Type
    <select name="type">
      <option value="boolean">Boolean (yes/no)</option>
      <option value="amount-integer">Amount (integer ex: 1)</option>
      <option value="amount-float">Amount (float ex: 1.23)</option>
    </select>
  </label>

  <input type="submit" value="Create Goal">
</form>